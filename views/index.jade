extends layout


block login-form
  div#login.well
    form.form-inline#loginform      
      p Connectez-vous pour participer Ã  la discussion!
      input(type="text" name="login" placeholder="Nom d'utilisateur")#username 
      input(type="text" name="mail" placeholder="E-mail")#mail 
      input.btn(type="submit") Envoyer

block message
  div#message-box(style="display: none;")
    ul.media-list
      li.media
        a.pull-left
          img(src="{{user.avatar}}")
        div.media-body
          h4.media-heading {{user.username}}
          p {{message}}

block user_box
  div#user_box(style="display: none;")
    li.media(id="{{id}}")
      a.pull-left
        img(src="{{avatar}}")
      div.media-body
        p {{username}}

block chatroom
  div.row-fluid
    div.span6.well
      div.well#live-draw-frame le iframe sera la
      div.well#twitterShare(name="twitterShare" style="margin-right:20px; margin-top: 10px; font-family: Hero; color: rgb(131,131,131); font-size: 18px;") Partager
